{
    "name": "rozbehsharahi/graphql3",
    "description": "A GraphQL extension for TYPO3",
    "type": "typo3-cms-extension",
    "license": ["GPL-3.0-or-later"],
    "authors": [
        {
            "name": "Rozbeh Chiryai Sharahi",
            "email": "rozbeh.sharahi@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/oliverklee/tailor"
        }
    ],
    "require": {
        "ext-pdo": "*",
        "ext-openssl": "*",
        "typo3/cms-core": "^12.0",
        "typo3/cms-backend": "^12.0",
        "typo3/cms-frontend": "^12.0",
        "typo3/cms-extensionmanager": "^12.0",
        "webonyx/graphql-php": "^14.10.0",
        "symfony/security-core": "^v6.0.14",
        "doctrine/inflector": "2.0.6",
        "firebase/php-jwt": "^6.3.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "typo3/cms-install": "^12.0",
        "phpunit/phpunit": "^9",
        "friendsofphp/php-cs-fixer": "dev-master",
        "phpstan/phpstan": "1.8.x-dev",
        "typo3/tailor": "dev-feature/symfony-6"
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "autoload": {
        "psr-4": {
            "RozbehSharahi\\Graphql3\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RozbehSharahi\\Graphql3\\Tests\\": "Tests"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "graphql3"
        }
    },
    "scripts": {
        "cache-clear": [
            "rm -rf var/cache",
            "rm -rf .build/var/cache",
            "rm -rf var/tests"
        ],
        "tests": [
            "@cache-clear",
            "vendor/bin/php-cs-fixer fix",
            "vendor/bin/phpstan",
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "@cache-clear",
            "vendor/bin/php-cs-fixer fix",
            "vendor/bin/phpstan",
            "vendor/bin/phpunit --coverage-html .build/public/coverage",
            "echo 'Checkout http:\/\/localhost:8080\/coverage\/' > /dev/null"
        ]
    }
}
